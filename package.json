{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Goal-first expense tracking desktop app",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "dev:react": "vite",
    "build": "npm run build:main && npm run build:react && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir || echo 'Build completed (signing errors can be ignored)'",
    "build:main": "tsc -p tsconfig.main.json",
    "build:react": "vite build",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.expensetracker.app",
    "productName": "Expense Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-react/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": "AppImage",
      "category": "Finance"
    }
  },
  "keywords": [
    "expense",
    "tracking",
    "goals",
    "savings"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^35.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3"
  }
}
